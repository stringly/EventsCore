@model EventsCore.Application.Events.Queries.GetEventsList.EventListVm

    <div class="card mt-3 mb-3">
        <div class="card-header">
            <div>
                <span class="float-left align-middle">Upcoming Events</span>
                <button class="btn btn-sm btn-primary float-right" id="refreshUpcomingEventsButton">Refresh</button>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Events.Count > 0)
            {
                <div class="table-responsive-sm">
                    <table class="table table-striped table-sm table-light">
                        <thead>
                            <tr>
                                <th>
                                    Start Date
                                </th>
                                <th>
                                    End Date
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Type
                                </th>
                                <th>
                                    Series
                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (EventsCore.Application.Events.Queries.GetEventsList.EventDto e in Model.Events)
                            {
                                <tr>

                                    <td>
                                        @e.StartDate
                                    </td>
                                    <td>
                                        @e.EndDate
                                    </td>
                                    <td>
                                        @e.Title
                                    </td>
                                    <td>
                                        @e.TypeName
                                    </td>
                                    <td>
                                        @e.SeriesName
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-success float-right" asp-route-returnUrl="/Index"><i class="fas fa-plus"></i> REGISTER</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center">
                    <h5>No Events Found</h5>
                </div>
            }

        </div>
    </div>